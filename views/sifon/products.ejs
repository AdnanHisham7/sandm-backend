<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sifon - Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .grain-texture {
            position: absolute;
            inset: 0;
            opacity: 0.1;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
            mix-blend-mode: overlay;
            pointer-events: none;
        }
    </style>
</head>
<body class="bg-black text-white">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/90 backdrop-blur-md border-b border-pink-500/20">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <a href="/" class="text-2xl font-bold bg-gradient-to-r from-pink-400 to-purple-400 bg-clip-text text-transparent">Sifon</a>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="text-gray-300 hover:text-pink-400">Home</a>
                    <a href="/sifon/products" class="text-pink-400">Shop</a>
                    <a href="/about" class="text-gray-300 hover:text-pink-400">About</a>
                    <a href="/contact" class="text-gray-300 hover:text-pink-400">Contact</a>
                </div>
                <button id="mobile-menu-button" class="md:hidden p-2 text-gray-300 hover:text-pink-400">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
            <div id="mobile-menu" class="hidden md:hidden absolute top-16 left-0 w-full bg-black/95 backdrop-blur-md border-b border-pink-500/20">
                <ul class="py-4">
                    <li><a href="/" class="block px-4 py-2 text-gray-300 hover:text-pink-400">Home</a></li>
                    <li><a href="/sifon/products" class="block px-4 py-2 text-pink-400">Shop</a></li>
                    <li><a href="/about" class="block px-4 py-2 text-gray-300 hover:text-pink-400">About</a></li>
                    <li><a href="/contact" class="block px-4 py-2 text-gray-300 hover:text-pink-400">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <section class="pt-24 pb-16 bg-black">
        <div class="container mx-auto px-4">
            <div class="mb-12">
                <div class="flex items-center mb-4 text-sm text-gray-400">
                    <a href="/" class="hover:text-pink-400">Home</a>
                    <span class="mx-2">/</span>
                    <span class="text-pink-400">Shop</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    <span class="text-white">All </span>
                    <span class="bg-gradient-to-r from-pink-400 to-purple-400 bg-clip-text text-transparent">Products</span>
                </h1>
                <p class="text-xl text-gray-400 max-w-2xl">
                    Discover our premium ceramic collections designed to elevate your space.
                </p>
            </div>

            <!-- Filters & Controls -->
            <div class="flex flex-col lg:flex-row gap-6 mb-8">
                <div class="flex-1 relative">
                    <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8" />
                        <path d="M21 21l-4.35-4.35" />
                    </svg>
                    <input type="text" placeholder="Search products..." class="w-full pl-12 pr-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:border-pink-500/50 focus:outline-none">
                </div>
                <div class="lg:w-64">
                    <select class="w-full px-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg text-white focus:border-pink-500/50 focus:outline-none">
                        <option value="">All Categories</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category._id %>"><%= category.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="flex border border-gray-700 rounded-lg overflow-hidden">
                    <button class="p-3 text-gray-400 hover:text-pink-400">Grid</button>
                    <button class="p-3 text-gray-400 hover:text-pink-400">List</button>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% categoriesWithProducts.forEach(({ category, products }) => { %>
                    <% products.forEach(product => { %>
                        <a href="/sifon/product/<%= product._id %>" class="group relative bg-gradient-to-br from-gray-900/50 to-black/50 border border-gray-800 rounded-2xl overflow-hidden hover:border-pink-500/30 transition-all duration-500 hover:scale-105">
                            <div class="aspect-square overflow-hidden relative">
                                <img src="<%= product.images[0] || '/placeholder.jpg' %>" alt="<%= product.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                                <div class="absolute top-4 left-4 px-3 py-1 bg-black/80 backdrop-blur-sm text-pink-400 font-semibold rounded-full text-sm">$<%= product.price %></div>
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-white mb-3 group-hover:text-pink-400 transition-colors duration-300"><%= product.name %></h3>
                                <p class="text-gray-400 text-sm leading-relaxed mb-4 line-clamp-2"><%= product.description %></p>
                                <div class="flex items-center text-pink-400 font-medium group-hover:text-purple-400 transition-colors duration-300">
                                    <span class="mr-2">View Product</span>
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                </div>
                            </div>
                            <div class="grain-texture"></div>
                        </a>
                    <% }) %>
                <% }) %>
            </div>

            <!-- View All Button -->
            <div class="mt-12 text-center">
                <a href="#" class="inline-block px-8 py-4 bg-gradient-to-r from-pink-500 to-purple-500 text-white font-semibold rounded-full hover:shadow-lg hover:shadow-pink-500/25 transition-all duration-300">View All</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="relative bg-black border-t border-gray-800 py-16">
        <div class="container mx-auto px-4 text-center text-gray-400">
            <p>&copy; 2023 Sifon. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>