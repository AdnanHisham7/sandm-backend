  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

    * {
      font-family: 'Inter', sans-serif;
    }

    html,
    body {
      overflow-x: hidden;
    }

    .gradient-bg {
      background: radial-gradient(ellipse at bottom center,
          #66b3ff 0%,
          #66b3ff 10%,
          #004080 55%,
          #00264d 70%,
          #000d1a 85%,
          #000000 100%);
      position: relative;
      overflow: hidden;
    }

    .shape-divider {
      position: absolute;
      bottom: -1px;
      left: 0;
      width: 100%;
      height: 200px;
      background: rgb(255, 255, 255);
      z-index: 10;
    }

    .gradient-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 50%;
      background: linear-gradient(to bottom, rgba(26, 26, 46, 0.8) 0%, transparent 100%);
      z-index: 1;
    }

    .gradient-bg::before,
    .gradient-bg::after {
      content: '';
      position: absolute;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(123, 104, 238, 0.1) 0%, rgba(123, 104, 238, 0.1) 50%, transparent 100%);
      animation: float 6s ease-in-out infinite;
    }

    .gradient-bg::before {
      width: 300px;
      height: 300px;
      top: 10%;
      right: 10%;
      animation-delay: 0s;
    }

    .gradient-bg::after {
      width: 200px;
      height: 200px;
      bottom: 20%;
      left: 15%;
      animation-delay: 3s;
    }

    .card-hover {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-hover:hover {
      transform: translateY(-8px);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      filter: blur(10px);
    }

    .fade-in.visible {
      animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
        filter: blur(10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    .slide-in-left {
      opacity: 0;
      transform: translateX(-50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .slide-in-left.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .slide-in-right {
      opacity: 0;
      transform: translateX(50px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .slide-in-right.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .floating {
      animation: floating 6s ease-in-out infinite;
    }

    @keyframes floating {

      0%,
      100% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-20px);
      }
    }

    .btn-primary {
      background: linear-gradient(135deg, #7c3aed, #a855f7);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 35px rgba(124, 58, 237, 0.4);
    }

    .btn-secondary {
      transition: all 0.3s ease;
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-2px);
    }

    .accordion-item {
      transition: all 0.3s ease;
    }

    .accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .accordion-content.open {
      max-height: 200px;
    }

    .service-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border-left: 4px solid transparent;
    }

    .service-card:hover {
      border-left-color: #7c3aed;
      background: rgba(124, 58, 237, 0.05);
      transform: translateX(8px);
    }

    .work-card {
      position: relative;
      overflow: hidden;
    }

    .work-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .work-card:hover::before {
      left: 100%;
    }

    .nav-link {
      position: relative;
      transition: all 0.3s ease;
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: #7c3aed;
      transition: width 0.3s ease;
    }

    .nav-link:hover::after {
      width: 100%;
    }

    .counter {
      font-variant-numeric: tabular-nums;
    }

    .slideshow-wrapper {
      position: relative;
      padding-top: 66.6667%;
    }

    .slideshow {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .slide.active {
      opacity: 1;
    }

    .timer-bar {
      position: absolute;
      bottom: 0;
      left: 0;
      height: 4px;
      background: #7c3aed;
      width: 0;
    }

    .slide.active .timer-bar {
      animation: timer 5s linear forwards;
    }

    @keyframes timer {
      from {
        width: 0;
      }

      to {
        width: 100%;
      }
    }

    /* Mobile Menu Styles */
    .mobile-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: max-content;
      background: rgba(0, 0, 0, 0.95);
      z-index: 50;
      transition: right 0.3s ease-in-out;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .mobile-menu.active {
      right: 0;
    }

    .mobile-menu a {
      color: white;
      padding: 1rem;
      transition: color 0.3s ease;
    }

    .mobile-menu a:hover {
      color: #7c3aed;
    }

    .hamburger-icon {
      font-size: 1.5rem;
    }

    .close-icon {
      position: absolute;
      top: 1rem;
      right: 1.5rem;
      font-size: 2rem;
      color: white;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .contact-btn {
        display: none;
      }
    }
  </style>
</head>

