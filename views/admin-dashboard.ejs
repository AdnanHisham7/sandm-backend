<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="/css/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .sidebar-item {
      transition: all 0.3s ease;
    }
    .sidebar-item:hover {
      background-color: #f0fdf4;
      color: #15803d;
    }
    .table-row:hover {
      background-color: #f9fafb;
    }
    .btn-hover {
      transition: all 0.3s ease;
    }
    .btn-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
    .search-input:focus {
      transform: scale(1.02);
      transition: transform 0.2s ease;
    }
  </style>
</head>
<body class="bg-gray-50">
  <!-- Top Navigation -->
  <nav class="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between shadow-sm">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-green-600 rounded flex items-center justify-center">
        <span class="text-white font-bold text-sm">SM</span>
      </div>
      <div>
        <h1 class="font-semibold text-gray-900">S&M Admin</h1>
        <p class="text-xs text-gray-500">Administrator</p>
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <div class="text-right">
        <p class="text-xs text-gray-500">Administrator</p>
      </div>
      <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
        <i class="fas fa-user text-green-600"></i>
      </div>
    </div>
  </nav>

  <div class="flex h-full min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200 min-h-screen shadow-lg">
      <nav class="p-4 space-y-2">
        <a href="/admin/dashboard" class="block">
          <div class="sidebar-item flex items-center space-x-3 p-3 text-sm font-medium text-gray-600 rounded-lg cursor-pointer <%= activeSection === 'dashboard' ? 'bg-green-50 text-green-700 border-r-2 border-green-600' : '' %>">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </div>
        </a>
        <a href="/admin/brands" class="block">
          <div class="sidebar-item flex items-center space-x-3 p-3 text-sm font-medium text-gray-600 rounded-lg cursor-pointer <%= activeSection === 'brands' ? 'bg-green-50 text-green-700 border-r-2 border-green-600' : '' %>">
            <i class="fas fa-building"></i>
            <span>Brands</span>
          </div>
        </a>
        <a href="/admin/categories" class="block">
          <div class="sidebar-item flex items-center space-x-3 p-3 text-sm font-medium text-gray-600 rounded-lg cursor-pointer <%= activeSection === 'categories' ? 'bg-green-50 text-green-700 border-r-2 border-green-600' : '' %>">
            <i class="fas fa-list"></i>
            <span>Categories</span>
          </div>
        </a>
        <a href="/admin/products" class="block">
          <div class="sidebar-item flex items-center space-x-3 p-3 text-sm font-medium text-gray-600 rounded-lg cursor-pointer <%= activeSection === 'products' ? 'bg-green-50 text-green-700 border-r-2 border-green-600' : '' %>">
            <i class="fas fa-box"></i>
            <span>Products</span>
          </div>
        </a>
      </nav>
      <div class="p-4 border-t border-gray-200">
        <a href="/admin/logout" class="block">
          <div class="sidebar-item flex items-center space-x-3 p-3 text-sm font-medium text-gray-600 rounded-lg cursor-pointer">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </div>
        </a>
      </div>
    </aside>
    <!-- Main Content -->
    <main class="flex-1 p-6 overflow-y-auto">
      <% if (activeSection === 'dashboard') { %>
        <%- include('partials/admin/dashboard') %>
      <% } else if (activeSection === 'brands') { %>
        <%- include('partials/admin/brands') %>
      <% } else if (activeSection === 'categories') { %>
        <%- include('partials/admin/categories') %>
      <% } else if (activeSection === 'products') { %>
        <%- include('partials/admin/products') %>
      <% } else if (activeSection === 'settings') { %>
        <%- include('partials/admin/settings') %>
      <% } %>
    </main>
  </div>
  <script src="/js/admin.js"></script>
</body>
</html>