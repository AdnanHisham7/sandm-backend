    <style>
        :root {
            --livora-primary: #2ECC71;
            --livora-primary-dark: #27AE60;
            --livora-secondary: #3b82f6;
            --livora-accent: #8b5cf6;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #065f46 0%, #047857 100%);
        }

        .fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        .slide-up {
            animation: slideUp 0.6s ease-out forwards;
        }

        .slide-in-left {
            animation: slideInLeft 0.8s ease-out forwards;
        }

        .slide-in-right {
            animation: slideInRight 0.8s ease-out forwards;
        }

        .scale-in {
            animation: scaleIn 0.6s ease-out forwards;
        }

        .float {
            animation: float 3s ease-in-out infinite;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .text-livera-green {
            color: #2ECC71;
        }

        .bg-livera-green {
            background-color: #2ECC71;
        }

        .text-livera-dark-green {
            color: #27AE60;
        }

        .bg-livera-dark-green {
            background-color: #27AE60;
        }

        .text-livera-forest {
            color: #1E3A2E;
        }

        .bg-livera-forest {
            background-color: #1E3A2E;
        }

        .text-livera-light-green {
            color: #E8F8F5;
        }

        .bg-livera-light-green {
            background-color: #E8F8F5;
        }

        .font-sans {
            font-family: 'Inter', system-ui, sans-serif;
        }

        .shadow-premium {
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .shadow-luxury {
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(255, 255, 255, 0.05);
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .image-gallery {
            position: relative;
        }

        .main-image {
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .thumbnail {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .thumbnail:hover {
            transform: scale(1.05);
            border-color: #343a40;
        }

        .thumbnail.active {
            border-color: #343a40;
            transform: scale(1.05);
        }

        .specification-card {
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            border: 1px solid rgba(52, 58, 64, 0.1);
            transition: all 0.3s ease;
        }

        .specification-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .sketch-overlay {
            background: linear-gradient(135deg, rgba(52, 58, 64, 0.9) 0%, rgba(73, 80, 87, 0.9) 100%);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .sketch-container:hover .sketch-overlay {
            opacity: 1;
        }

        .pulse-border {
            animation: pulseBorder 2s infinite;
        }

        @keyframes pulseBorder {

            0%,
            100% {
                border-color: rgba(52, 58, 64, 0.3);
            }

            50% {
                border-color: rgba(52, 58, 64, 0.8);
            }
        }

        .breadcrumb-item {
            position: relative;
        }

        .breadcrumb-item:not(:last-child)::after {
            content: '→';
            margin: 0 12px;
            color: #94a3b8;
        }

        .product-badge {
            background: linear-gradient(135deg, #343a40 0%, #495057 100%);
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 4px 12px;
            border-radius: 20px;
            position: absolute;
            top: 16px;
            left: 16px;
            z-index: 10;
        }

        .zoom-container {
            overflow: hidden;
            cursor: zoom-in;
        }

        .zoom-image {
            transition: transform 0.3s ease;
        }

        .zoom-container:hover .zoom-image {
            transform: scale(1.1);
        }

        .feature-highlight {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-left: 4px solid #343a40;
        }
    </style>
</head>

