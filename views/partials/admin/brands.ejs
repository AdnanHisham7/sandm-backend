<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-4 sm:space-y-0">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Brands</h1>
      <p class="text-gray-600">Manage your brand portfolio</p>
    </div>
    <button onclick="openBrandModal()"
      class="btn-hover bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">
      <i class="fas fa-plus mr-2"></i>Add Brand
    </button>
  </div>

  <!-- Search Bar -->
  <div class="relative max-w-md">
    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
    <input type="text" placeholder="Search brands"
      class="search-input w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
  </div>

  <!-- Brands Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Brand</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% brands.forEach(brand=> { %>
            <tr class="table-row">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <% if (brand.logo) { %>
                    <img src="<%= brand.logo %>" alt="<%= brand.name %> Logo"
                      class="w-10 h-10 rounded-lg object-cover mr-4">
                  <% } else { %>
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                      <span class="text-green-600 font-semibold text-sm">
                        <%= brand.name.charAt(0) %>
                      </span>
                    </div>
                  <% } %>
                  <div class="text-sm font-medium text-gray-900">
                    <%= brand.name %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate">
                <%= brand.description || 'No description' %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate">
                <% if (brand.url) { %>
                  <a href="<%= brand.url %>" target="_blank" class="text-blue-600 hover:underline"><%= brand.url %></a>
                <% } else { %>
                  No URL
                <% } %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap">
                <%= new Date(brand.createdAt).toLocaleDateString() %>
              </td>
              <td class="px-6 py-4 text-right">
                <button onclick='openBrandModal("<%= brand._id %>")' class="text-green-600 hover:text-green-900 p-1">
                  <i class="fas fa-edit"></i>
                </button>
                <button onclick="confirmDeleteBrand('<%= brand._id %>')" class="text-red-600 hover:text-red-900 p-1">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Brand Modal -->
  <div id="brandModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <form id="brandForm" class="p-6 space-y-4">
        <input type="hidden" id="brandId">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Brand Name *</label>
          <input type="text" id="name" name="name" required
            class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
        </div>
        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea id="description" name="description" rows="3"
            class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"></textarea>
        </div>
        <div>
          <label for="logo" class="block text-sm font-medium text-gray-700 mb-1">Brand Logo</label>
          <input type="file" id="logo" name="logo" accept="image/*"
            class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
        </div>
        <div>
          <label for="url" class="block text-sm font-medium text-gray-700 mb-1">Brand URL</label>
          <input type="text" id="url" name="url"
            class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
        </div>
        <div class="flex space-x-3 pt-4">
          <button type="button" onclick="closeBrandModal()"
            class="flex-1 px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
          <button type="submit"
            class="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="confirmDeleteBrandModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Delete Brand</h3>
        <p class="text-gray-600 mb-6">Are you sure you want to delete this brand? This action cannot be undone.</p>
        <div class="flex space-x-341">
          <button onclick="closeDeleteBrandModal()"
            class="flex-1 px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
          <button onclick="deleteBrand()"
            class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Delete</button>
        </div>
      </div>
    </div>
  </div>
</div>