  <!-- Carousel Script -->
  <script>
    const products = [
      {
        image: 'assets/toilet1.png',
        name: 'BM 1320',
        variant: 'Silicon Onepiece Toilet',
        size: '700x360x770mm',
        strap: 'S-Trap: 300mm'
      },
      {
        image: 'assets/toilet2.png',
        name: 'BM 1450',
        variant: 'Glaze Rimless Onepiece',
        size: '710x370x760mm',
        strap: 'S-Trap: 220mm'
      },
      {
        image: 'assets/toilet3.png',
        name: 'BM 1600',
        variant: 'Compact Wall-Hung Toilet',
        size: '680x350x740mm',
        strap: 'S-Trap: 250mm'
      }
    ];

    let current = 0;

    const textContainer = document.querySelector('.carousel-text');
    const imgElement = document.querySelector('.carousel-image');
    const h1Element = textContainer.querySelector('h1');
    const h2Element = textContainer.querySelector('h2');
    const pElements = textContainer.querySelectorAll('p');
    const sizeElement = pElements[0];
    const strapElement = pElements[1];

    function updateSlide(direction) {
      imgElement.classList.add('opacity-0');

      if (direction === 'next') {
        textContainer.style.transform = 'translateX(-100%)';
        textContainer.style.opacity = '0';
      } else {
        textContainer.style.transform = 'translateX(100%)';
        textContainer.style.opacity = '0';
      }

      setTimeout(() => {
        const product = products[current];
        imgElement.src = product.image;
        h1Element.innerText = product.name;
        h2Element.innerText = product.variant;
        sizeElement.innerText = product.size;
        strapElement.innerText = product.strap;

        if (direction === 'next') {
          textContainer.style.transform = 'translateX(100%)';
        } else {
          textContainer.style.transform = 'translateX(-100%)';
        }
        textContainer.style.opacity = '0';

        // Trigger reflow to apply the initial position
        void textContainer.offsetWidth;

        textContainer.style.transform = 'translateX(0)';
        textContainer.style.opacity = '1';

        imgElement.classList.remove('opacity-0');
      }, 500);
    }

    function prevSlide() {
      current = (current - 1 + products.length) % products.length;
      updateSlide('prev');
    }

    function nextSlide() {
      current = (current + 1) % products.length;
      updateSlide('next');
    }

    // Start auto-sliding every 5 seconds
    setInterval(nextSlide, 5000);
  </script>
