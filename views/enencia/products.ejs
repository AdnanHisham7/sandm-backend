    <!-- Main Content -->
    <section class="py-36 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-start text-gray-900 mb-16">Our Products</h1>

        <% categoriesWithProducts.forEach(({ category, products }) => { %>
            <div class="mb-20">
                <h2 class="text-2xl font-semibold text-gray-800 mb-8">
                    <a href="/enencia/category/<%= category._id %>" class="hover:text-gray-700 transition-colors duration-200">
                        <%= category.name %>
                    </a>
                </h2>

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% products.forEach(product => { %>
                        <a href="/enencia/product/<%= product._id %>" class="block border border-gray-200 rounded-md overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200 bg-white">
                            <img src="<%= product.images[0] || 'https://via.placeholder.com/300' %>" alt="<%= product.name %>" class="w-full h-48 object-cover">

                            <div class="p-4">
                                <h3 class="text-base font-semibold text-gray-900 mb-1 truncate">
                                    <%= product.name %>
                                </h3>
                                <p class="text-sm text-gray-600">
                                    <%= product.description && product.description.length > 50 
                                        ? product.description.substring(0, 50) + '...' 
                                        : product.description || 'No description available' %>
                                </p>
                            </div>
                        </a>
                    <% }) %>
                </div>

                <div class="mt-8 text-center">
                    <a href="/enencia/category/<%= category._id %>" class="text-sm font-medium text-livera-green hover:underline">
                        View all products in <%= category.name %>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
</section>


